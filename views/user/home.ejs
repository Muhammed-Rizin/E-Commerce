<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Male_Fashion Template">
    <meta name="keywords" content="Male_Fashion, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>HUFIKO</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap"
    rel="stylesheet">

    <link rel="icon" href="/user/assets/hufiko-website.png">
    <!-- Css Styles -->
    <link rel="stylesheet" href="/user/styleSheet/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/user/stylesheet/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/user/stylesheet/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/nice-select.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/style.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>

<body>
    <div id="preloder">
        <div class="loader"></div>
    </div>
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="offcanvas__option">
            <div class="offcanvas__links">
                <div class="row">
                    <% if(typeof message !=='undefined' ){%>
                        <div class="col-lg-6 col-md-5">
                            <div class="header__top__right">
                                <div class="header__top__links">
                                    <a href="/login">Sign in</a>
                                </div>
                                
                            </div>
                        </div>
                    <% } %>
                    <% if(typeof user !=='undefined' ){%>
                        <div class="col-lg-6 col-md-5">
                            <div class="header__top__right">
                                <div class="header__top__links">
                                    <a href="/profile"> <%=user %> </a>
                                    <a href="/logout">Log-Out</a>
                                </div>                                
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
            
        </div>
        <div class="offcanvas__nav__option">

            <a href="/wish-list"><img src="/user/assets/img/icon/heart.png" alt=""></a>
            <a href="/cart"><img src="/user/assets/img/icon/cart.png" alt=""> </a>
        </div>
        <div id="mobile-menu-wrap"></div>
        <div class="offcanvas__text">
            <p>Free shipping, 30-day return or refund guarantee.</p>
        </div>
    </div>
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-7">
                        <div class="header__top__left">
                            <p>Free shipping, 30-day return or refund guarantee.</p>
                        </div>
                    </div>
                    <% if(typeof message !=='undefined' ){%>
                        <div class="col-lg-6 col-md-5">
                            <div class="header__top__right">
                                <div class="header__top__links">
                                    <a href="/login">Sign in</a>
                                </div>
                                
                            </div>
                        </div>
                    <% } %>
                    <% if(typeof user !=='undefined' ){%>
                        <div class="col-lg-6 col-md-5">
                            <div class="header__top__right">
                                <div class="header__top__links">
                                    <a href="/profile"> <%=user %> </a>
                                    <a href="/logout">Log-Out</a>
                                </div>                                
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="header__logo">
                        <a href="/"><img src="/user/assets/hufiko-logo.png" width="120px" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li class="active"><a href="/">Home</a></li>
                            <li ><a href="/product">Products</a></li>
                            <li><a href="#">Pages</a>
                                <ul class="dropdown">                             
                                    <li><a href="/order-history">Orders</a></li>
                                </ul>
                            </li>
                            
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3 col-md-3">
                    <div class="header__nav__option">
            
                        <a href="/wish-list"><img src="/user/assets/img/icon/heart.png" alt=""></a>
                        <a href="/cart"><img src="/user/assets/img/icon/cart.png" alt=""> </a>
                    </div>
                </div>
            </div>
            <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>
    </header>
    <section class="hero">
        <div class="hero__slider owl-carousel">
            <% banner.forEach((value,index)=>{%>
                <div class="hero__items set-bg" data-setbg="/product-images/<%= banner[index].image%>" style="background-image: url('/product-images/<%= banner[index].image%>')">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-5 col-lg-7 col-md-8">
                                <div class="hero__text">
                                    <h2><%= value.heading %></h2>
                                    <p><%= value.description %></p>
                                    <a href="/product" class="primary-btn">Shop now <i class="fa fa-arrow-right"></i></a>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <%}) %>
        </div>
    </section>
    <!-- Hero Section End -->

    <!-- Banner Section Begin -->
    <section class="banner spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 offset-lg-4">
                    <div class="banner__item">
                        <div class="banner__item__pic">
                            <img src="/user/assets/img/two.png" alt="" width="450px">
                        </div>
                        <div class="banner__item__text">
                            <h2>New Collections 2023</h2>
                            <a href="/product">Shop now</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="banner__item banner__item--middle">
                        <div class="banner__item__pic">
                            <img src="/user/assets/img/download.png" alt="" width="400px">
                        </div>
                        <div class="banner__item__text">
                            <h2>Exclusive</h2>
                            <a href="/product">Shop now</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="banner__item banner__item--last">
                        <div class="banner__item__pic">
                            <img src="/user/assets/img/Three.png" alt="" width="500px">
                        </div>
                        <div class="banner__item__text">
                            <h2>New Offers</h2>
                            <a href="/product">Shop now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Banner Section End -->

    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li data-filter=".new-arrivals" class="active">New Arrivals</li>
                    </ul>
                </div>
            </div>
            <div class="row product__filter">
                <% data.forEach((value,index)=>{ %>
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="/product-images/<%= value.image[0] %>" style="background-image: url('/product-images/<%= value.image[0] %>')">
                            <span class="label">New</span>
                            <ul class="product__hover">
                                <li><a onclick="addToWishlist('<%= value._id %>')"><img src="/user/assets/img/icon/heart.png" alt="">
                                    <span>Add to wishlist</span></a></li>
                                <li><a href="/view-product?id=<%= value._id %>"><img src="/user/assets/img/icon/eye.png" alt="">
                                        <span>view</span></a>
                                </li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><%= value.name %></h6>
                            <a onclick="addToCart('<%= value._id %>')" class="add-cart">+ Add To Cart</a>
                            <h5>$<%= value.price %></h5>
                        </div>
                    </div>
                </div>
                <% })%>
            </div>
        </div>
    </section>
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search End -->

    <!-- Js Plugins -->
    <script src="/user/javaScript/jquery-3.3.1.min.js"></script>
    <script src="/user/javaScript/bootstrap.min.js"></script>
    <script src="/user/javaScript/jquery.nice-select.min.js"></script>
    <script src="/user/javaScript/jquery.nicescroll.min.js"></script>
    <script src="/user/javaScript/jquery.magnific-popup.min.js"></script>
    <script src="/user/javaScript/jquery.countdown.min.js"></script>
    <script src="/user/javaScript/jquery.slicknav.js"></script>
    <script src="/user/javaScript/mixitup.min.js"></script>
    <script src="/user/javaScript/owl.carousel.min.js"></script> 
    <script src="/user/javaScript/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <script>
        function addToCart(id) {
                $.ajax({
                  url: "/add-to-cart",
                  method: "post",
                  encoded: true,
                  data: {
                    id: id,
                  },
                }).done((data) => {
                  if (data.success) {
                    swal("Added!", "Item has been added to Cart!", "success");
                  }else if(data.outofstock){
			        swal("Oops!", "Out of stock", "error")
		          }else{
                    swal("Oops!", "User not found. Please login.", "error")
                  }
                });
              }
            function addToWishlist(id){
            $.ajax({
                url : '/add-to-wishlist',
                method : 'post',
                encoded : true,
                data : {
                    id : id
                }
            }).done((data) => {
                if(data.success) {
                    swal("Added!", "Item has been added to whislist!", "success");
                }else if(data.already){
                    swal("Oops!", "Already added", "error")
                }else {
                    swal("Oops!", "User not found. Please login.", "error")

                }
            })
        }
    </script>
</body>

</html>