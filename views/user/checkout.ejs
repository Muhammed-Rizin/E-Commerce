    <script>
        $("#place-order").submit((e)=>{
            const amount = document.getElementById("total-amount").innerHTML
            const totalAmount = document.getElementById("subtotal-amount").innerHTML
            const walletAmount = document.getElementById("walletAmount").innerHTML
            let address = $("input[name=address]:checked").val()
            let paymentMethod = $("input[name=payment]:checked").val();

            e.preventDefault()
            $.ajax({
                url : "/place-order",
                method : 'post',
                data : {
                    total : amount,
                    address : address,
                    payment : paymentMethod,
                    walletAmount : walletAmount,
                    amount : totalAmount
                },
                success :(response) => {
                    if(response.codSuccess == true){
                        location.href = "/order-placed"
                    }else {
                        razorpayPayment(response.order)
                    }
                }
            })
        })

        function razorpayPayment(order) {
            var options = {
              key: "rzp_test_EZV83G5JC3gjfZ",
              amount: order.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
              currency: "INR",
              name: "HUFIKO",
              description: "Test Transaction",
              image: "https://example.com/your_logo",
              order_id: order.id,
              handler: function (response) {
                verifyPayment(response, order);
              },
              prefill: {
                name: "Gaurav Kumar",
                email: "gaurav.kumar@example.com",
                contact: "9000090000",
              },
              notes: {
                address: "Razorpay Corporate Office",
              },
              theme: {
                color: "#3399cc",
              },
            };
            var rzp1 = new Razorpay(options);
            rzp1.open();
          }

          function verifyPayment(payment, order) {
            console.log(payment);
            $.ajax({
              url: "/verify-payment",
              method: "post",
              data: {
                payment,
                order,
              },
              success: (response) => {
                if (response.success) {
                  location.href = "/order-placed";
                } else {
                  alert("payment failed");
                }
              },
            });
            console.log(order);
          }

// Coupon Code
        function applyCoupon(value){
            const amount = document.getElementById("total-amount").innerHTML
            $.ajax({
                url : '/apply-coupon',
                method : 'post',
                data  :{
                    code : value,
                    amount : amount
                }
            }).done((response)=>{
                if(response.success){
                    document.getElementById('discount-amount').innerHTML = response.discount
                    document.getElementById('total-amount').innerHTML = response.discountTotal
                    swal("Added!", "Coupon added successfully!", "success");
                }else if(response.minimumPurchaseAmount){
                    swal("Oops!", `Minimum purchase amount required $ ${response.minimumAmount}`, "error")
                }else if(response.cantUse){
                    swal("Oops!", `Maximum count used`, "error")
                }else if(response.expired){
                    swal("Oops!", `Code Expired`, "error")
                }else {
                    swal("Oops!", `Somthing wrong with coupon`, "error")
                }
            })
        }
        
    </script>
