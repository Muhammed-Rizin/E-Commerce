    <script>
        function addToCart(id) {
                $.ajax({
                  url: "/add-to-cart",
                  method: "post",
                  encoded: true,
                  data: {
                    id: id,
                  },
                }).done((data) => {
                  if (data.success) {
                    window.location.reload();
                  }else if(data.outofstock){
			        swal("Oops!", "Out of stock", "error")
		          }else{
                    swal("Oops!", "User not found. Please login.", "error")
                  }
                });
              }
              function popupcart() {
                swal("Added!", "Item has been added to Cart!", "success");
            }
    </script>
