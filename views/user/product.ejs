    <!-- Shop Section Begin -->
    <section class="shop spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="shop__sidebar">
                        <div class="shop__sidebar__search">
                            <form action="/product?value=<%= price %>&category=<%= cat %>" method="get">
                                <input type="text" name="search" placeholder="Search...">
                                <button type="submit"><span class="fa fa-search"></span></button>
                            
                        </div>
                        <div class="shop__sidebar__accordion">
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseTwo">Brand</a>
                                    </div>
                                    <div id="collapseTwo" class="collapse" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__brand">
                                                <ul>
                                                    <% category.forEach((value,index)=>{ %>
                                                        
                                                        <li><a href="/product?category=<%= value.name %>&value=<%= price %>&search=<%= Search %>"><%=value.name%></a></li>
                                                    
                                                    <%}) %>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>   
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="shop__product__option">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__left">
                                    <a href="/product" style="text-decoration: none; color: black;"><i class="fa fa-close">  Clear Filter</i></a>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__right">
                                    <p>Sort by Price:</p>
                                    <select name="price" id="price" onchange="location = '/product?value='+value+'&category=<%= cat %>&search=<%= Search %>'" >
                                        <% if(price == "High"){ %>
                                            <option value="Low"> Low To High</option>
                                            <option value="High" selected>High To Low</option>
                                        <%} else {%>
                                            <option value="Low" selected> Low To High</option>
                                            <option value="High">High To Low</option>
                                        <%} %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>
                    </div>
                    <div class="row">
                        <% data.forEach((value,index)=>{ %>
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            
                            <div class="product__item"> 
                                <div class="product__item__pic set-bg" data-setbg="/product-images/<%= value.image[0] %>"
                                    style="background-image: url('/product-images/<%= value.image[0] %>')">
                                    <ul class="product__hover">
                                        <li><a onclick="addToWishlist('<%= value._id %>')"><img src="/user/assets/img/icon/heart.png" alt="">
                                            <span>Add to wishlist</span></a></li>
                                        <li><a href="/view-product?id=<%= value._id %>"><img src="/user/assets/img/icon/eye.png" alt="">
                                                <span>view</span></a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><%= value.name %></h6>
                                    <a  onclick="addToCart('<%= value._id %>'),popupcart()" class="add-cart">+ Add To Cart</a>
                                    
                                    <h5>$<%= value.price %></h5>
                                    
                                </div>
                            </div>
                        </div>
                        <% })%>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="product__pagination">
                                <% for(i=0;i < totalPage; i++){ %>
                                    <% if(i+1 == page){ %> 
                                        <a href="/product?page=<%= i+1 %>&value=<%= price %>&category=<%= cat %>&search=<%= Search %>" class="active"><%= i+1 %></a>
                                    <%} else { %>
                                        <a href="/product?page=<%= i+1 %>&value=<%= price %>&category=<%= cat %>&search=<%= Search %>"><%= i+1 %></a>
                                    <% }%>
                                <% } %>
                                    <!-- <a class="active" href="/product">1</a>
                                    <a href="/product?page=2">2</a>
                                    <a href="#">3</a>
                                    <span>...</span>
                                    <a href="#">21</a> -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shop Section End -->

