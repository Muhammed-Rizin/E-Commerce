    <script>
         function addToCart(id) {
            console.log(id);
                $.ajax({
                    
                  url: "/add-to-cart-wishlist",
                  method: "post",
                  encoded: true,
                  data: {
                    id: id,
                  },
                }).done((data) => {
                  if (data.success) {
                    location.reload()
                  }else if(data.outofstock){
			        swal("Oops!", "Out of stock", "error")
		          }else{
                    swal("Oops!", "User not found. Please login.", "error")
                  }
                });
              }
            
    </script>
