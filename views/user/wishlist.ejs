                    <div class="shopping__cart__table">
                        <% if(typeof data2 == 'undefined'){%>
                            
                            <table>
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.forEach((value)=>{%>
                                        <tr>
                                            <td class="product__cart__item">
                                                <div class="product__cart__item__pic">
                                                    <img src="/product-images/<%= value.productId.image[0] %>" style="width: 100px;" alt="">
                                                </div>
                                                <div class="product__cart__item__text">
                                                    <h6><%= value.productId.name %></h6>
                                                    <h5>$<%= value.productId.price %></h5>
                                                </div>
                                            </td>
                                            <td>
                                                <button onclick="addToCart('<%= value.productId._id %>') " class="btn btn-dark">+ Add To Cart</button>
                                            </td>
                                            
