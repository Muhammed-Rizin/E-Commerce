    <script>
        function deleteitem(id) {
            console.log("hi deleteting"+id);
          $.ajax({
            url: "/delete-wishlist-item",
            method: "post",
            encoded: true,
            data: {
              id: id,
            },
          }).done((data) => {
            console.log(data);
            if (data.success) {
                location.reload();
            }
          });
