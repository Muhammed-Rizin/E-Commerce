<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Male_Fashion Template">
    <meta name="keywords" content="Male_Fashion, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>HUFIKO</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap"
        rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="/user/styleSheet/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/nice-select.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/style.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <style>
        .input{
            width: 100%;
            height: 100%;
            border: none;
            outline: none;
            color: #6c757d;
        }
    </style>
</head>

<body>
    
    <div id="preloder">
        <div class="loader"></div>
    </div>
    <!-- Offcanvas Menu Begin -->
    
    <!-- Offcanvas Menu End -->

    <!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-7">
                        <div class="header__top__left">
                            <p>Free shipping, 30-day return or refund guarantee.</p>
                        </div>
                    </div>
                    <% if(typeof message !=='undefined' ){%>
                        <div class="col-lg-6 col-md-5">
                            <div class="header__top__right">
                                <div class="header__top__links">
                                    <a href="/login">Sign in</a>
                                    <a href="#">FAQs</a>
                                </div>
                                
                            </div>
                        </div>
                    <% } %>
                    <% if(typeof data !=='undefined' ){%>
                        <div class="col-lg-6 col-md-5">
                            <div class="header__top__right">
                                <div class="header__top__links">
                                    <a href="/profile"> <%=data.user_name %> </a>
                                    <a href="/logout">Log-Out</a>
                                </div>                                
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="header__logo">
                        <a href="/"><img src="/user/assets/img/logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li class="active"><a href="/product">Products</a></li>
                            <li><a href="#">Pages</a>
                                <ul class="dropdown">
                                    <li><a href="/cart">Cart</a></li>
                                    <li><a href="/about">Whish List</a></li>
                                    <li><a href="/orders">Orders</a></li>
                                </ul>
                            </li>
                            <li><a href="/contact">Contacts</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3 col-md-3">
                    <div class="header__nav__option">
                        <a href="#" class="search-switch"><img src="/user/assets/img/icon/search.png" alt=""></a>
                        <a href="#"><img src="/user/assets/img/icon/heart.png" alt=""></a>
                        <a href="#"><img src="/user/assets/img/icon/cart.png" alt=""> <span>0</span></a>
                        <div class="price">$0.00</div>
                    </div>
                </div>
            </div>
            <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>
    </header>
    <!-- Header Section End -->

    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Profile</h4>
                        <div class="breadcrumb__links">
                            <a href="/">Home</a>
                            <span>Profile</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-5">
            <h5 class="text-start wallet mb-3">Wallet : $<%= data.wallet %></h5>
            <form action="/update-profile" method="post">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card mb-4">
                          <div class="card-body">
                            <div class="row">
                              <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                              </div>
                              <div class="col-sm-9">
                                <input type="text" name="name" class="input" value="<%= data.user_name %>" required>
                                <input type="hidden" name="id" value="<%= data._id %>">
                              </div>
                            </div>
                            <hr>
                            <div class="row">
                              <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                              </div>
                              <div class="col-sm-9">
                                <input type="email" name="email" class="input" value="<%= data.email %>" required>
                              </div>
                            </div>
                            <hr>
                            <div class="row">
                              <div class="col-sm-3">
                                <p class="mb-0">Mobile</p>
                              </div>
                              <div class="col-sm-9">
                                <input type="number" name="mobile" class="input" value="<%= data.mobile_number %>" required>
                              </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <button type="submit" class="site-btn">Update</button>
                                </div>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <section class="blog-hero spad">
        <div class="container">
        </div>
    </section>

    <!-- Breadcrumb Section Begin -->

    
    <!-- Breadcrumb Section End -->

    <!-- Shop Section Begin -->
    
    <!-- Shop Section End -->

    <!-- Footer Section Begin -->
    
    <!-- Footer Section End -->

    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search End -->

    <!-- Js Plugins -->
    <script src="/user/javaScript/jquery-3.3.1.min.js"></script>
    <script src="/user/javaScript/bootstrap.min.js"></script>
    <script src="/user/javaScript/jquery.nice-select.min.js"></script>
    <script src="/user/javaScript/jquery.nicescroll.min.js"></script>
    <script src="/user/javaScript/jquery.magnific-popup.min.js"></script>
    <script src="/user/javaScript/jquery.countdown.min.js"></script>
    <script src="/user/javaScript/jquery.slicknav.js"></script>
    <script src="/user/javaScript/mixitup.min.js"></script>
    <script src="/user/javaScript/owl.carousel.min.js"></script>
    <script src="/user/javaScript/main.js"></script>
</body>

</html>