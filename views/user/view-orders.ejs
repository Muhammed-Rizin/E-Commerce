<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Male_Fashion Template">
    <meta name="keywords" content="Male_Fashion, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>HUFIKO</title>
    <link rel="icon" href="/user/assets/hufiko-website.png">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap"
        rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="/user/styleSheet/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/nice-select.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="/user/styleSheet/style.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>

<body>
     <!-- Offcanvas Menu Begin -->
    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="offcanvas__option">
            <div class="offcanvas__links">
                <div class="row">
                    <% if(typeof message !=='undefined' ){%>
                        <div class="col-lg-6 col-md-5">
                            <div class="header__top__right">
                                <div class="header__top__links">
                                    <a href="/login">Sign in</a>
                                </div>
                                
                            </div>
                        </div>
                    <% } %>
                    <% if(typeof user !=='undefined' ){%>
                        <div class="col-lg-6 col-md-5">
                            <div class="header__top__right">
                                <div class="header__top__links">
                                    <a href="/profile"> <%=user %> </a>
                                    <a href="/logout">Log-Out</a>
                                </div>                                
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
            
        </div>
        <div class="offcanvas__nav__option">
            <a href="#" class="search-switch"><img src="/user/assets/img/icon/search.png" alt=""></a>
            <a href="#"><img src="/user/assets/img/icon/heart.png" alt=""></a>
            <a href="#"><img src="/user/assets/img/icon/cart.png" alt=""> <span>0</span></a>
            <div class="price">$0.00</div>
        </div>
        <div id="mobile-menu-wrap"></div>
        <div class="offcanvas__text">
            <p>Free shipping, 30-day return or refund guarantee.</p>
        </div>
    </div>
    <!-- Offcanvas Menu End -->
    <!-- Offcanvas Menu End -->

    
    <!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-7">
                        <div class="header__top__left">
                            <p>Free shipping, 30-day return or refund guarantee.</p>
                        </div>
                    </div>
                    <% if(typeof message !=='undefined' ){%>
                        <div class="col-lg-6 col-md-5">
                            <div class="header__top__right">
                                <div class="header__top__links">
                                    <a href="/login">Sign in</a>
                                    <a href="#">FAQs</a>
                                </div>
                                
                            </div>
                        </div>
                    <% } %>
                    <% if(typeof user !=='undefined' ){%>
                        <div class="col-lg-6 col-md-5">
                            <div class="header__top__right">
                                <div class="header__top__links">
                                    <a href="/profile"> <%=user %> </a>
                                    <a href="/logout">Log-Out</a>
                                </div>                                
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="header__logo">
                        <a href="/"><img src="/user/assets/hufiko-logo.png" width="120px" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li ><a href="/product">Products</a></li>
                            <li><a href="#">Pages</a>
                                <ul class="dropdown">                             
                                    <li><a href="/order-history">Orders</a></li>
                                </ul>
                            </li>
                            <li><a href="/contact">Contacts</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3 col-md-3">
                    <div class="header__nav__option">
                        <a href="#" class="search-switch"><img src="/user/assets/img/icon/search.png" alt=""></a>
                        <a href="/wish-list"><img src="/user/assets/img/icon/heart.png" alt=""></a>
                        <a href="/cart"><img src="/user/assets/img/icon/cart.png" alt=""> </a>
                    </div>
                </div>
            </div>
            <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>
    </header>
    <!-- Header Section End -->


    <!-- Contact Section Begin -->
    <section class="contact spad">
        <div class="container">
            <div class="row">
                <% data.forEach((value,index) => { %>
                <div class="col-sm-12 col-xl-4 mb-4">
                    <div class="bg-light rounded h-100 p-4">
                        <h6 class="mb-4">Product <%= index+1 %></h6>
                       
                            <div class="testimonial-item text-center">
                                <img class="img-fluid rounded-circle mx-auto mb-4" src="/product-images/<%= value.productId.image[0] %>" style="width: 100px; height: 100px;">
                                <h5 class="mb-1"><%= value.productId.name %></h5>
                                <p class="mb-0"><b>Quantity :<%= value.quantity %></b></p>
                                <p class="mb-0"><b>Total Amount :<%= value.productId.price * value.quantity %></b></p>
                                <p class="mb-0"> <%= value.productId.description %></p>
                                <% if(status == 'Delivered' || status == 'Return Pending' || status == 'Return Approved'){ 
                                    if(value.status == 'Return Approved' || value.status == 'Return Pending'){ %>
                                        <p style="color: red;"><%= value.status %></p>        
                                    <%}else { %>
                                        <a href="/return?id=<%= id %>&prodId=<%= value.productId._id %>"><button type="button" class="btn btn-warning m-2" onclick="return returnConforme(this)">Return</button>
                                    <%} %>
                                <%} %>
                            </div>
                        
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search End -->

    <!-- Js Plugins -->
    <script src="/user/styleSheet/jquery-3.3.1.min.js"></script>
    <script src="/user/styleSheet/bootstrap.min.js"></script>
    <script src="/user/styleSheet/jquery.nice-select.min.js"></script>
    <script src="/user/styleSheet/jquery.nicescroll.min.js"></script>
    <script src="/user/styleSheet/jquery.magnific-popup.min.js"></script>
    <script src="/user/styleSheet/jquery.countdown.min.js"></script>
    <script src="/user/styleSheet/jquery.slicknav.js"></script>
    <script src="/user/styleSheet/mixitup.min.js"></script>
    <script src="/user/styleSheet/owl.carousel.min.js"></script>
    <script src="/user/styleSheet/main.js"></script>
</body>

</html>